<html>

<head>
    <title>
        <%= title %>
    </title>
    <!-- todo: change component all to bootstrap 4, So we can use more component -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <!-- Propeller card -->
    <!-- <link rel="stylesheet" type="text/css" href="css/card.css"> -->
    <link href="css/modal.css" type="text/css" rel="stylesheet" />
    <style>
        form {
            background: #000;
            padding: 3px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        form input {
            border: 0;
            padding: 10px;
            width: 90%;
            margin-right: .5%;
        }

        form button {
            width: 9%;
            background: rgb(130, 224, 255);
            border: none;
            padding: 10px;
        }
    </style>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();
    </script>
    <script src="./js/jquery-1.11.1.js"></script>
    <script>
        var selectedCard;

        function setSelectedCard(selected) {
            selectedCard = $(selected)
        }

        function doAttending() {
            var socket = io();
            socket.emit('attendance', {
                name: "STUDENT" + $('#course-name').val(),
                student: $('#course-student').val(),
                absence: $('#course-absence').val(),
            });
            console.log('Student Request Sent!')
            console.log(selectedCard)
            selectedCard.id.remove();
            console.log('After Shave!')
        }
        $(function () {
            var socket = io();
            $('form').submit(function () {
                socket.emit('attendance', {
                    name: "STUDENT" + $('#course-name').val(),
                    student: $('#course-student').val(),
                    absence: $('#course-absence').val(),
                });
                return false;
            });
            var classes =
                socket.on('attendance', function (data) {
                    $(`#${data.name}`)
                    if (data.name.indexOf("PROF") > -1) {
                        $('#coursesList').append(
                            $('<div>').on('click', setSelectedCard($(this))).addClass( //.on("click", removeCard)
                                'col-lg-4 col-md-6 col-sm-12 ltr').attr({
                                "id": data.name,
                                "data-toggle": "modal",
                                "data-target": "#classAttendancy"
                            }).append(
                                $('<div>').addClass("card-img").append(
                                    $('<div>').addClass("wrapper-img-blue").append(
                                        $('<div>').addClass("content-img col-md-7").append(
                                            $('<h5>').addClass("card-title").text(data.name.substring(4)),
                                            $('<h6>').addClass("card-title").text(data.prof),
                                            $('<h6>').addClass("card-title").text(data.absence +
                                                ' غیبت')
                                        ),
                                        $('<div>').addClass("text-center col-md-5").append(
                                            $('<img>', {
                                                src: 'img/500x500.png'
                                            }).addClass('responsive-img')
                                        )
                                    )
                                )
                            )
                        );
                    }
                });
        });
    </script>
</head>

<body>
    <div class="container" id="messages">
        <div id="classAttendancy" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="classSettingTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">سامانه حضور و غیاب</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="students">
                        <p dir="rtl">حضوری شما زده شد!</p>
                    </div>
                    <div class="modal-footer ltr" id="modal-btn">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="doAttending()">ممنون</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <form class="sendform">
                <input id="course-name" autocomplete="off" placeholder="name" />
                <input id="course-student" autocomplete="off" placeholder="prof-name" />
                <input id="course-absence" autocomplete="off" placeholder="absence" />
                <button>Send</button>
            </form>
            <div id="topbar">
                <h3 id="username" style="text-align: center">خوش آمدید،
                    <%= username %>
                </h3>
            </div>
            <hr>
            <br>
            <h3 class="sectionTitle">کلاس های شما</h3>
            <hr>
            <div class="row" id="coursesList">
                <% for(var i=0; i<courses.length; i++) {%>
                    <div class="col-lg-4 col-md-6 col-sm-12 course-container" data-toggle="modal" data-target="#classAttendancy" id=< %=courses[i].course_id%>>
                        <div class="card-img">
                            <div class="wrapper-img-grey">
                                <div class="content-img col-md-7">
                                    <h5 class="card-title">
                                        <%= courses[i].course_name %>
                                    </h5>
                                    <h6 class="card-title">
                                        <%= courses[i].teachers_full_names[0] %>
                                    </h6>
                                    <h6 class="card-title"> غیبت
                                        <%= courses[i].absence_count %>
                                    </h6>
                                </div>
                                <div class="text-center col-md-5">
                                    <img src="<%= courses[i].pic_url %>" class="responsive-img">
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>

            <script type="text/javascript" src="js/bootstrap.min.js"></script>
            <script>
                //for sticky topbar
                window.onscroll = function () {
                    myFunction()
                };

                var topbar = document.getElementById("topbar");
                var sticky = topbar.offsetTop;

                function myFunction() {
                    if (window.pageYOffset >= sticky) {
                        topbar.classList.add("sticky")
                    } else {
                        topbar.classList.remove("sticky");
                    }
                }
            </script>
        </div>
</body>


</html>