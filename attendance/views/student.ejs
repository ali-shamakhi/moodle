<body>
    <div class="container" id="messages">
        <div id="classAttendancy" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="classSettingTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">سامانه حضور و غیاب</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="students">
                        <p dir="rtl">حضوری شما زده شد!</p>
                    </div>
                    <div class="modal-footer ltr" id="modal-btn">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="doAttending()">ممنون</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <!-- <form class="sendform">
                <input id="course-name" autocomplete="off" placeholder="name" />
                <input id="course-student" autocomplete="off" placeholder="prof-name" />
                <input id="course-absence" autocomplete="off" placeholder="absence" />
                <button>Send</button>
            </form> -->
            <div class="topbar" id=<%= user_id %> >
                <h3 id="username" style="text-align: center">خوش آمدید،
                    <%= username %>
                </h3>
            </div>
            <hr>
            <br>
            <h3 class="sectionTitle" id=<%= user_id %> >کلاس های شما</h3>
            <hr>
            <div class="row" id="coursesList">
                <% for(var i=0; i<courses.length; i++) {%>
                    <div class="col-lg-4 col-md-6 col-sm-12 course_container" data-toggle="modal" data-target="#classAttendancy" id=<%= "course_" + courses[i].course_id %> >
                        <div class="card-img">
                            <div class="wrapper-img-grey">
                                <div class="content-img col-md-7">
                                    <h5 class="card-title">
                                        <%= courses[i].course_name %>
                                    </h5>
                                    <h6 class="card-title">استاد:
                                        <%= courses[i].teacher_details[0].full_name %>
                                    </h6>
                                    <h6 class="card-title"> غیبت
                                        <%= courses[i].absence_count %>
                                    </h6>
                                </div>
                                <div class="text-center col-md-5">
                                    <img src="<%= courses[i].teacher_details[0].pic_url %>" class="responsive-img">
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>

            <script type="text/javascript" src="js/bootstrap.min.js"></script>
            <script>
                //for sticky topbar
                window.onscroll = function () {
                    myFunction()
                };

                var topbar = $(".topbar");
                var sticky = topbar.offsetTop;

                function myFunction() {
                    if (window.pageYOffset >= sticky) {
                        topbar.classList.add("sticky")
                    } else {
                        topbar.classList.remove("sticky");
                    }
                }
            </script>
        </div>
