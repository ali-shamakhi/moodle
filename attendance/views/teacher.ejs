                                $('<h4>').addClass("card-title name").text(student.full_name),
                                $('<h6>').addClass("card-title").text("تعداد غیبت: " + student.absence_count),
                            )
                        )
                    )
                )
            )
        }

        function removeFromList() {

            var name = $('#username').text()
            console.log('name: ', username)

