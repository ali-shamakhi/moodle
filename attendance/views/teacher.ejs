        function detailsAPICall() {
            var time = $('#exampleFormControlSelect1').val() * 60 * 1000;

            $.post('/mediator', {
                'time': time,
                'course_id': 4
            }, function (students, status) {
                // console.log(students.students_details)
                console.log(students)
                if (students.error !== null) {
                    console.log('–––––––––––––––––––––––––––––––––––––––datailAPI–error')
                    alert('Error in calling course detail!')
                    
                } else {
                    console.log('datailAPI is ok!')
                    var studentsDetails = students.students_details
                    for (i in studentsDetails) {
                        console.log(studentsDetails[i])
                        addStudent(studentsDetails[i]);
                    }
                }
            });
        }

        function addStudent(student) {
            var id = "student_" + student.id
            $('#studentsList').append(
                $('<div>').attr({
                    "id": id,
                }).on('click', removeFromList).addClass('col-lg-3 col-md-4 col-sm-6').append(
